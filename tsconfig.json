// https://2ality.com/2021/06/typescript-esm-nodejs.html
{
    "compilerOptions": {
        "rootDir": "ts",
        "outDir": "dist",
        "target": "es2020",
        "lib": ["es2020", "DOM"],
        "module": "ES2020", // (A)
        "moduleResolution": "Node", // (B)
        "strict": true,
        "sourceMap": true,
        // Needed for CommonJS modules
        "allowSyntheticDefaultImports": true, // (C)
        //
        "declaration": true
    },
    "exclude": ["node_modules/**/*"],
    "include": ["ts/src/**/*"]
}
